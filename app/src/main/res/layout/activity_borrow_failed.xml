<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="334dp"
        android:src="@drawable/backbtn_black"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/textGagal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="129dp"
        android:layout_marginStart="128dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:text="Maaf"
        android:textColor="@color/cheva_kuning"
        android:textSize="24sp" />
    <ImageView
        android:id="@+id/imageGagal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gagal"
        android:layout_below="@+id/textGagal"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barang gagal dipinjam"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/cheva_kuning"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/imageGagal"
        android:layout_marginTop="19dp"
        android:layout_centerInParent="true"/>



</RelativeLayout>